{
  "name": "file-upload-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn start-server\" \"yarn electron:start\"",
    "electron:build": "yarn build && electron-builder",
    "electron:start": "wait-on tcp:5173 && electron .",
    "start-server": "node server/index.js"
  },
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "electron-is-dev": "^3.0.1",
    "express": "^4.21.0",
    "glob": "^11.0.0",
    "multer": "^1.4.5-lts.1",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.13",
    "wait-on": "^8.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@eslint/js": "^9.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "vite": "^5.4.1"
  },
  "main": "electron/main.js",
  "build": {
    "extends": null,
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
